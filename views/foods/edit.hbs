                <label for="day">Day</label>
                <input type="text" class="form-control" name="day" value="{{food.day}}">
            </div>
            <div class="form-group">
                <label for="breakfast">breakfast</label>
                <input type="text" class="form-control" name="breakfast" value="{{food.breakfast}}">
            </div>
            <div class="form-group">
                <label for="lunch">Lunch</label>
                <input type="text" class="form-control" name="lunch" value="{{food.lunch}}" step="any">
            </div>
             <div class="form-group">
                <label for="dinner">dinner</label>
                <input type="text" class="form-control" name="dinner" value="{{food.dinner}}" step="any">
            </div>
            <div class="form-group" id="edit">
                <button type="submit" class="btn btn-primary">Edit</button>
                     <a href="/users/{{userId}}/lists">
             <button type="button" class="btn btn-primary">
