<div class="jumbotron jumbotron-fluid" id="front-page">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img src="../images/icon.jpg" class="img-responsive" id="logo" alt="logo">
            </div>
            <div class="col-md-6" id="center-div">
                <h2>Grocery List App</h2>
            </div>
        </div>
        <hr>
        <div>
            <a href="/users/new"> 
            <button id="btn-color" type="button" class="btn btn-primary">
                <span class="glyphicon glyphicon-user">
              </span> Add a New User</button></a>
        </div>
        <br> {{#each users}}
        <div class="row">
            <div class="col-md-4">
                <ul>
                    <li><strong>{{this.name}}</strong></li>
                </ul>
            </div>
        </div>
        <div class="d-flex flex-reverse">
            <div class="p-2">
                <a href="/users/{{this._id}}">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
                Information</button></a>
            </div>
            <div class="p-2">
                <a href="/users/{{this._id}}/lists">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-list" aria-hidden="true"></i>
                {{this.name}}'s Grocery Lists</button></a>
            </div>
            <div class="p-2">
                <a href="/users/{{this._id}}/foods">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-list" aria-hidden="true"></i>
                {{this.name}}'s Diet Plan</button></a>
            </div>
        </div>
        <hr>
        <br> {{/each}}
        <a href="/users/mainpage">
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon glyphicon-backward">
              </span> Back</button></a>
    </div>
    {{!--
    <p class="text-center">Prakash Rai</p> --}}
</div>