    <div class="container" id="center-div">
        <div>
            <h2>{{user.name}}'s Shopping List</h2>
            <hr>
            <div class="container shoplist">
                {{#each user.lists}}
                <table class="table">
                    <thead class="thead-inverse">
                        <tr>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                <tbody>
                    <tbody>
                        <tr>
                            <th>{{this.name}}</th>
                            <th>{{this.qty}}</th>
                            <th>{{this.note}}</th>
                        </tr>
                     </tbody>
                 </tbody>
                </table>
                <a href="/users/{{../user._id}}/lists/{{this._id}}">
            <button type="button" class="btn btn-success    ">
            View</button></a> {{/each}}
            </div><br>
            <div class="row">
